<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<main>
  <h2><%= title %></h2>

  <% if (reviews.length > 0) { %>
    <ul>
      <% reviews.forEach(review => { %>
        <li>
          <h3><%= review.vehicle_name %></h3>
          <img src="<%= review.vehicle_image %>" alt="<%= review.vehicle_image %>">
          ‚≠ê <%= review.rating %> - <%= review.review_text %>
          <br>
          <small>By <%= review.reviewer_name %> el <%= new Date(review.review_date).toLocaleDateString() %></small> 
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There is no review yet.</p>
  <% } %>

  <%-/* include('review-form', { inv_id: vehicle.inv_id })*/ %> 
</main>

