<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Add Classification</h1>
<% } %>

<%- messages() %>

<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form class="classification-form" id="classificationForm" action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name:</label>
  <input 
    type="text" 
    id="classification_name" 
    name="classification_name" 
    required pattern="^[A-Za-z0-9]+$" 
    title="No spaces or special characters allowed." 
    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
  >
  <small>No spaces or special characters allowed.</small>
  <button type="submit">Add Classification</button>
</form>

